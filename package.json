{
  "name": "wo-long-si",
  "productName": "卧龙寺 for Desktop",
  "version": "0.0.1",
  "description": "My Electron application description",
  "main": ".webpack/main/index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts .",
    "release": "npm run package && node ./release.js"
  },
  "repository": {
    "url": "https://github.com/sewerganger/wo-long-si.git"
  },
  "keywords": [],
  "author": {
    "name": "sewerganger",
    "email": "wanghan9423@outlook.com"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "src/main/icons/win/icon.ico",
        "asar": false,
        "overwrite": true
      },
      "makers": [
        {
          "name": "@electron-forge/maker-wix",
          "config": {
            "language": 1033,
            "manufacturer": "bilibiliup"
          }
        },
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "卧龙寺 for Desktop"
          }
        },
        {
          "name": "@electron-forge/maker-zip"
        }
      ],
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "mainConfig": "./webpack.main.config.js",
            "renderer": {
              "config": "./webpack.renderer.config.js",
              "entryPoints": [
                {
                  "html": "./src/renderer/index.html",
                  "js": "./src/renderer/index.ts",
                  "name": "main_window"
                },
                {
                  "html": "./src/renderer/setting.html",
                  "js": "./src/renderer/setting.ts",
                  "name": "setting_window"
                }
              ]
            }
          }
        ]
      ]
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-wix": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "@electron-forge/plugin-webpack": "6.0.0-beta.54",
    "@marshallofsound/webpack-asset-relocator-loader": "^0.5.0",
    "@types/cookie": "^0.4.0",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "copy-webpack-plugin": "^6.2.1",
    "css-loader": "^4.2.1",
    "electron": "11.1.1",
    "electron-builder": "^22.9.1",
    "electron-forge-maker-nsis": "^22.10.4",
    "electron-wix-msi": "^3.0.6",
    "eslint": "^7.6.0",
    "eslint-plugin-import": "^2.20.0",
    "file-loader": "^6.2.0",
    "fork-ts-checker-webpack-plugin": "^5.0.14",
    "node-loader": "^1.0.1",
    "style-loader": "^1.2.1",
    "ts-loader": "^8.0.2",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "@types/tinycolor2": "^1.4.2",
    "cookie": "^0.4.1",
    "electron-log": "^4.3.1",
    "electron-squirrel-startup": "^1.0.0",
    "electron-updater": "^4.3.5",
    "got": "^11.8.1",
    "open": "^7.3.1",
    "tinycolor2": "^1.4.2"
  }
}